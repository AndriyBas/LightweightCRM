<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/sync_task_imageView"
        android:layout_toLeftOf="@+id/sync_task_imageView"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:paddingTop="3dp"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_task_title"
        android:layout_toStartOf="@+id/sync_task_imageView"
        android:layout_toLeftOf="@+id/sync_task_imageView"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:paddingBottom="3dp"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/sync_task_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:contentDescription="@string/task_item_image_description" />

</RelativeLayout>