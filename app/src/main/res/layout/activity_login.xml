    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/login_screen_background"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="@dimen/login_activity_image_size"
                android:layout_height="@dimen/login_activity_image_size"
                android:layout_gravity="top|center"
                android:contentDescription="@string/title"
                android:src="@drawable/logo_netspace"/>

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="@string/title"
                android:textColor="@color/textColor"
                android:textSize="@dimen/login_activity_title_text_size"/>

            <EditText
                android:id="@+id/loginEditText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:gravity="center"
                android:hint="@string/login_edit_text_hint"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"/>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:background="@color/button_background"
                android:text="@string/login_button"/>

            <ProgressBar
                android:id="@+id/login_activity_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:visibility="invisible"/>
        </LinearLayout>
    </FrameLayout>
    </ScrollView>
